# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true
charset = utf-8
trim_trailing_whitespace = true

[*]
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = false

[*.yml]
indent_size = 2

[*.{php,json,yml,xml,md}]
insert_final_newline = true